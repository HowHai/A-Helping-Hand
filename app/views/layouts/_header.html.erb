<header class="navbar navbar-fixed-top navbar-inverse">
  <!-- <div class="navbar-inner"> -->
    <div class="container">
      <%= link_to "Helping Hand", root_path, class: "brand" %>
      <%= image_tag("logo.jpg", id: "logo") %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home", "#" %></li>
          <li><%= link_to "Blog", "#" %></li>
          <li>
            <% if current_user %>

              <div class="btn-group">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                  <span class="glyphicon glyphicon-user"></span>
                  <%= current_user.email %>
                  <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to "Account setting", edit_user_path(current_user) %></li>
                  <li><%= link_to "Log out", auths_path, method: :delete %></li>
                </ul>
              </div>

            <% else %>
              <%= link_to "Sign in", new_auth_path %>
            <% end %>
          </li>
        </ul>
      </nav>
    </div>
</header>

<!-- Flash messages -->
<% flash.each do |key, value| %>
  <%= content_tag(:div, value, class: "alert alert-#{key}", id: "alert_box") %>
<% end %>
