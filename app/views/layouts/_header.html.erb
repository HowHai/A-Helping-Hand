<header class="navbar navbar-fixed-top navbar-inverse">
  <!-- <div class="navbar-inner"> -->
    <div class="container">
      <%= link_to "Helping Hand", root_path, class: "brand" %>
      <%= image_tag("logo.jpg", id: "logo") %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home", "#" %></li>
          <li><%= link_to "Blog", "#" %></li>
          <li>
            <% if current_user %>
              <%= link_to "Log out", auths_path, method: :delete %> <br>
            <% else %>
              <%= link_to "Sign in", new_auth_path %>
            <% end %>
          </li>
        </ul>
      </nav>
    </div>
</header>

<!-- Flash messages -->
<% flash.each do |key, value| %>
  <%= content_tag(:div, value, class: "alert alert-#{key}", id: "alert_box") %>
<% end %>
