<p id="notice"><%= notice %></p>
<div class="row" id="sign-up-form">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :email %>
      <%= f.text_field :email %>
      <br />
      <%= f.submit "Create my account", class: "btn btn-large btn-primary", id: "newClicker" %>
    <% end %>
  </div>
</div>

