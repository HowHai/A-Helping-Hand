<%= form_for(@user, remote: true, class: "newUserForm", url: "/users", method: "post") do |f| %>
  <%= render 'shared/error_messages' %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :email %>
  <%= f.text_field :email %>
  <br />
  <%= f.submit "Create my account", class: "btn btn-large btn-primary", id: "clickMe" %>
<% end %>
